def match_words(words):
    ctr= 0
    lst = []
    for word in words:
        if len(word) >1 and word[0] == word[-1]:
            ctr += 1
            lst.append(word)
    print("list or words that matches\n", lst)
    return ctr

count = match_words(['abc', 'xyz', 'aba', '1221', "abcja"])
print("Number of words that match:", count)